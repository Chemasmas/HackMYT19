<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="appambiental2016.hackmty.hack2016.Pregunta6"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué tipos de separación de basura hay?"
        android:id="@+id/pregunta6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1, 2 y 3."
        android:id="@+id/respuesta1p6"
        android:textSize="28dp"
        android:layout_below="@+id/pregunta6"
        android:layout_alignLeft="@+id/respuesta2p6"
        android:layout_alignStart="@+id/respuesta2p6"
        android:layout_marginTop="43dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orgánica e inorgánica "
        android:id="@+id/respuesta2p6"
        android:textSize="28dp"
        android:layout_below="@+id/respuesta1p6"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton6"
        android:textSize="28dp"
        android:layout_below="@+id/respuesta2p6"
        android:layout_alignLeft="@+id/respuesta2p6"
        android:layout_alignStart="@+id/respuesta2p6" />

</RelativeLayout>
